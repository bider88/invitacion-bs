---
import type { RegalosProps } from '../../types/sections';

interface Props extends RegalosProps {}

const {
  id = 'regalos',
  class: className = '',
  message = 'Si deseas hacernos un regalo, puedes consultar nuestra mesa de regalos en <span class="font-semibold">[enlace o tienda]</span>.'
} = Astro.props;

const sectionClasses = `relative flex flex-col justify-center items-center min-h-screen w-screen overflow-hidden text-center ${className}`;
---
<section id={id} class={sectionClasses}>
  <div class="absolute inset-0 bg-gradient-to-br from-yellow-100 via-white to-yellow-200 opacity-60 z-0"></div>
  <div class="relative z-10 p-6 flex flex-col items-center w-full h-full">
  <h2 class="text-3xl font-semibold text-pink-600 mb-3">Mesa de Regalos</h2>
  <p class="text-gray-700 text-xl" set:html={message}></p>
  <p class="text-gray-700 text-xl">¡Gracias por tu cariño y apoyo!</p>
</section>
