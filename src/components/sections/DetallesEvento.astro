---
import Button from '../shared/Button.astro';
import type { DetallesEventoProps } from '../../types/sections';

interface Props extends DetallesEventoProps {}

const {
  id = 'detalles',
  class: className = '',
  date = '21 de Junio de 2025',
  time = '4:00 PM',
  location = 'Salon Jard√≠n El Pilar, Boulevard el Pilar modulo 6 entre calle Irlanda del Norte e Italia, 72310 Puebla, Pue.',
  mapUrl = 'https://www.google.com.mx/maps/place/Salon+Jardin+El+Pilar/@19.0546679,-98.1270858,17z/data=!4m6!3m5!1s0x85cfeb089dc5e20f:0x2e002d29d596b14!8m2!3d19.0547495!4d-98.12649!16s%2Fg%2F11fn7jqvty?entry=ttu&g_ep=EgoyMDI1MDUxMy4xIKXMDSoASAFQAw%3D%3D'
} = Astro.props;

const sectionClasses = `relative flex flex-col justify-center items-center min-h-screen w-screen overflow-hidden ${className}`;
---

<section
  id={id}
  class={sectionClasses}
>
  <!-- Video background -->
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute inset-0 w-full h-full object-cover z-0 pointer-events-none"
    src="/assets/backgrounds/bg-asistencia.mp4"></video>
  <div
    class="absolute inset-0 bg-gradient-to-br from-blue-100 via-white to-blue-200 opacity-60 z-0"
  >
  </div>
  <div class="relative z-10 p-6 flex flex-col items-center w-full h-full">
    <h2 class="text-3xl font-semibold text-pink-600 mb-3">
      Detalles del Evento
    </h2>
    <ul class="text-xl space-y-1 text-gray-800 mb-6">
      <li><span class="font-semibold">Fecha:</span> {date}</li>
      <li><span class="font-semibold">Hora:</span> {time}</li>
      <li>
        <span class="font-semibold">Lugar:</span> {location}
      </li>
    </ul>
    <Button
      href={mapUrl}
      target="_blank"
      variant="secondary"
      class="text-lg font-semibold"
    >
      Ver mapa
    </Button>
  </div>
</section>
