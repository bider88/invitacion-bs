---
import Button from '../shared/Button.astro';
import type { DetallesEventoProps } from '../../types/sections';

interface Props extends DetallesEventoProps {}

const {
  id = 'detalles',
  class: className = '',
  date = '21 de Junio de 2025',
  time = '4:00 PM',
  location = 'Salon Jardín El Pilar, Boulevard el Pilar modulo 6 entre calle Irlanda del Norte e Italia, 72310 Puebla, Pue.',
  mapUrl = 'https://www.google.com.mx/maps/place/Salon+Jardin+El+Pilar/@19.0546679,-98.1270858,17z/data=!4m6!3m5!1s0x85cfeb089dc5e20f:0x2e002d29d596b14!8m2!3d19.0547495!4d-98.12649!16s%2Fg%2F11fn7jqvty?entry=ttu&g_ep=EgoyMDI1MDUxMy4xIKXMDSoASAFQAw%3D%3D',
  description1 = 'Un espacio al aire libre, lleno de alegría, amor y sorpresas...',
  description2 = '¡Te esperamos para compartir juntos esta celebración tan especial!',
} = Astro.props;

const sectionClasses = `relative flex flex-col justify-center items-center min-h-screen w-screen overflow-hidden ${className}`;
---

<section
  id={id}
  class={sectionClasses}
>
  <!-- Video background -->
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute inset-0 w-full h-full object-cover z-0 pointer-events-none"
    src="/assets/backgrounds/bg-asistencia.mp4"></video>
  <div
    class="absolute inset-0 bg-gradient-to-br from-blue-100 via-white to-blue-200 opacity-60 z-0"
  >
  </div>
  <div class="relative z-10 p-8 flex flex-col items-center w-full max-w-3xl mx-auto h-full animate-fadeInUp delay-700">
    <h2 class="text-4xl font-semibold text-pink-600 mb-6 text-center">
      Detalles del Evento
    </h2>
    
    <div class="w-full bg-white/80 rounded-2xl shadow-lg p-6 mb-8 backdrop-blur-sm">
      <ul class="text-xl space-y-4 text-gray-800">
        <li class="flex items-center gap-2">
          <span class="inline-flex items-center justify-center bg-pink-100 text-pink-600 p-2 rounded-full w-10 h-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </span>
          <span class="ml-2"><span class="font-semibold">Fecha:</span> {date}</span>
        </li>
        <li class="flex items-center gap-2">
          <span class="inline-flex items-center justify-center bg-pink-100 text-pink-600 p-2 rounded-full w-10 h-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </span>
          <span class="ml-2"><span class="font-semibold">Hora:</span> {time}</span>
        </li>
        <li class="flex items-start gap-2">
          <span class="inline-flex items-center justify-center bg-pink-100 text-pink-600 p-2 rounded-full w-10 h-10 mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </span>
          <span class="ml-2"><span class="font-semibold">Lugar:</span> {location}</span>
        </li>
      </ul>
    </div>
    
    <div class="text-xl text-center text-gray-800 mb-8 bg-white/70 p-6 rounded-xl backdrop-blur-sm">
      <p class="mb-2">{description1}</p>
      <p>{description2}</p>
    </div>
    
    <Button
      href={mapUrl}
      target="_blank"
      variant="secondary"
      class="text-lg font-semibold px-6 py-3 flex items-center gap-2"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
      </svg>
      Ver mapa
    </Button>
  </div>
</section>
