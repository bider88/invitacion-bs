---
import "/styles/global.css";
import Bienvenida from "../components/sections/Bienvenida.astro";
import DetallesEvento from "../components/sections/DetallesEvento.astro";
import Programa from "../components/sections/Programa.astro";
import RSVP from "../components/sections/RSVP.astro";
import Regalos from "../components/sections/Regalos.astro";
import Footer from "../components/Footer.astro";

// Replace with your actual Google Analytics Measurement ID when you have one
const googleAnalyticsId: string = 'G-JH24R5KFTR';
---
<html lang="es">
  <head>
    <meta charset="utf-8">
    <title>Invitación Baby Shower</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Te invitamos a celebrar con nosotros la dulce espera de nuestra bebé en este Baby Shower especial. El evento será el 21 de Junio de 2025 a las 4:00 PM en el Salón Jardín El Pilar. ¡Acompáñanos en este día lleno de alegría!">
    <meta name="keywords" content="baby shower, invitación, celebración, bebé, evento, fiesta infantil, Puebla, Salón Jardín El Pilar">
    <meta name="author" content="Familia">
    <meta name="robots" content="index, follow">
    <meta name="theme-color" content="#EC4899">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://invitacion-bs.netlify.app/">
    <meta property="og:title" content="Invitación Baby Shower">
    <meta property="og:description" content="Te invitamos a celebrar con nosotros la dulce espera de nuestra bebé en este Baby Shower especial. El evento será el 21 de Junio de 2025 a las 4:00 PM en el Salón Jardín El Pilar. ¡Acompáñanos en este día lleno de alegría!">
    <meta property="og:image" content="/assets/images/chupon.png">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://invitacion-bs.netlify.app/">
    <meta property="twitter:title" content="Invitación Baby Shower">
    <meta property="twitter:description" content="Te invitamos a celebrar con nosotros la dulce espera de nuestra bebé en este Baby Shower especial. El evento será el 21 de Junio de 2025 a las 4:00 PM en el Salón Jardín El Pilar. ¡Acompáñanos en este día lleno de alegría!">
    <meta property="twitter:image" content="/assets/images/chupon.png">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://invitacion-bs.netlify.app/">
    
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    
    <!-- Google Analytics -->
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsId}`}></script>
    <script define:vars={{ measurementId: googleAnalyticsId }}>
      // Type declaration for window.dataLayer
      window.dataLayer = window.dataLayer || [];
      
      // Type-safe gtag function
      function gtag(...args) {
        window.dataLayer.push(arguments);
      }
      
      gtag('js', new Date());
      gtag('config', measurementId);
    </script>
  </head>
  <body class="bg-gradient-to-b from-pink-50 to-blue-50 min-h-screen font-sans">
    <main id="main">
      <Bienvenida />
      <DetallesEvento />
      {false && <Programa />}
      <RSVP />
      {false && <Regalos />}
      <Footer />
    </main>
  </body>
</html>
